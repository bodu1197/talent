interface SplatterDrop {
  size: number;
  top?: string;
  bottom?: string;
  left?: string;
  right?: string;
  opacity: number;
  blur: 'none' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
}

// 물리 엔진: 물감 비산 계산
// origin: 발사 지점 {x, y} (rem 단위)
// angle: 발사 각도 (도)
// velocity: 초기 속도 (임의 단위)
// viscosity: 점도 (0-1, 높을수록 빨리 떨어짐, 크기 작아짐)
// gravity: 중력 (기본 9.8)
function calculateSplatter(
  origin: { x: number; y: number },
  angle: number,
  velocity: number,
  viscosity: number,
  timeStep: number = 0.1,
  gravity: number = 9.8
): { x: number; y: number; size: number } {
  const rad = (angle * Math.PI) / 180;
  const vx = velocity * Math.cos(rad);
  const vy = velocity * Math.sin(rad);

  // 공기저항 계수 (점도에 비례)
  const dragCoef = 0.1 + viscosity * 0.3;

  // 포물선 운동
  const t = timeStep;
  const x = origin.x + vx * t - 0.5 * dragCoef * vx * t * t;
  const y = origin.y + vy * t - 0.5 * gravity * t * t;

  // 크기 = 초기속도 * (1 - 점도) - 점도 높으면 작은 방울
  const baseSize = velocity * 8;
  const size = baseSize * (1 - viscosity * 0.6);

  return { x, y, size };
}

